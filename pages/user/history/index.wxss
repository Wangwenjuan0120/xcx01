.history_list {
  margin: 0 40rpx;
}

.history_item .time {
  text-align: center;
  font-size: 22rpx;
  line-height: 80rpx;
}

.history_item .item {
  background: #fff;
  border: 1rpx solid #ddd;
  border-radius: 20rpx;
  padding: 20rpx;
  box-shadow: 0px 2rpx 6rpx #999;
  margin-bottom: 25rpx;
  font-size: 26rpx;
  position: relative;
}

.history_item .item .type {
  position: absolute;
  top: 0rpx;
  right: 0rpx;
  line-height: 40rpx;
  padding: 0 20rpx;
  background: #f5a623;
  border-top-right-radius: 20rpx;
  border-bottom-left-radius: 20rpx;
  font-size: 22rpx;
}

.item .name {
  font-size: 32rpx;
}

.item .content {
  margin: 20rpx 0;
}

.item .inf text {
  margin-right: 20rpx;
}
